<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ace_orange</item>
        <item name="colorPrimaryVariant">@color/ace_orange_variant</item>
        <item name="colorOnPrimary">@color/ace_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ace_secondary_variant</item>
        <item name="colorSecondaryVariant">@color/ace_secondary_variant_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/ace_secondary_variant</item>
    </style>

    <!--    Splash Screen Theme for Light Mode-->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ace_logo</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Ace</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>