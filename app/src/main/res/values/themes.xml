<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ace.NoAppBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ace_orange</item>
        <item name="colorPrimaryVariant">@color/ace_orange_variant</item>
        <item name="colorOnPrimary">@color/ace_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ace_secondary_variant</item>
        <item name="colorSecondaryVariant">@color/ace_secondary_variant_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/ace_secondary_variant</item>
    </style>

    <!--    Splash Screen Theme for Light Mode-->
    <style name="Theme.Ace.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ace_logo</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Ace.NoAppBar</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" >false</item>
    </style>

    <style name="Theme.Ace" parent="Base.Theme.Ace.NoAppBar" />
</resources>